<p id="notice"><%= notice %></p>

<h1>Time Records</h1>

<table>
  <thead>
    <tr>
      <th>Comment</th>
      <th>Time type</th>
      <th>Started time</th>
      <th>Finished time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_records.each do |time_record| %>
      <tr>
        <td><%= time_record.comment %></td>
        <td><%= time_record.time_type %></td>
        <td><%= time_record.started_time.strftime("%H:%M:%S") %></td>
        <td><%= time_record.finished_time.strftime("%H:%M:%S") %></td>
        <td><%= link_to 'Show', time_record %></td>
        <td><%= link_to 'Edit', edit_time_record_path(time_record) %></td>
        <td><%= link_to 'Destroy', time_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Time Record', new_time_record_path %>
