%h1 Time Records
%table
  %thead
    %tr
      %th Comment
      %th Time type
      %th Started time
      %th Finished time
      %th User
  %tbody
    - @time_records.each do |time_record|
      %tr
        %td= time_record.comment
        %td= time_record.time_type
        %td= time_record.started_time.strftime("%H:%M:%S | %d/%m/%Y") if time_record.started_time != nil
        %td= time_record.finished_time.strftime("%H:%M:%S | %d/%m/%Y") if time_record.finished_time != nil
        - get_user_first_name_of_time_record(time_record).each do |user|
          %td= user.first_name