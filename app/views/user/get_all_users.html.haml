%table
  %thead
    %tr
      %th First Name
      %th Last Name
      %th User Role
      %th Email
      %th{:colspan=>3}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.first_name
        %td= user.last_name
        %td= user.user_role
        %td= user.email
        %td= link_to 'Show', user_show_path
        %td= link_to 'Edit',  user_edit_path
        %td= link_to 'Destroy', user_path(id: user.id), method: :delete, data: { confirm: 'Are you sure?' }